<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <!-- auth.users: authentication-side user record -->
    <changeSet id="001-create-auth-users" author="alice">
        <createTable tableName="users" schemaName="auth">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- billing.users: billing-side user record (same table name, different schema) -->
    <changeSet id="001-create-billing-users" author="alice">
        <createTable tableName="users" schemaName="billing">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_number" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- billing.invoices -->
    <changeSet id="001-create-billing-invoices" author="alice">
        <createTable tableName="invoices" schemaName="billing">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC(12,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- inventory.products -->
    <changeSet id="001-create-inventory-products" author="alice">
        <createTable tableName="products" schemaName="inventory">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="sku" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- orders: NO schemaName â€” unqualified, normalizes to public.orders -->
    <changeSet id="001-create-orders" author="alice">
        <createTable tableName="orders">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
